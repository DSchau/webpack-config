{
  "name": "@dschau/webpack-config",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "build": "tsc",
    "predeploy": "npm run build",
    "deploy": "bump-version & cp .gitignore dist/ & cp .npmignore dist/",
    "clean": "del-cli \"dist/**/*\"",
    "prettier": "prettier --write --single-quote --parser typescript \"src/**/*.ts\"",
    "test": "echo \"Should write some tests\""
  },
  "dependencies": {
    "autoprefixer": "~7.2.4",
    "babel-core": "~6.26.0",
    "babel-loader": "~7.1.2",
    "babel-plugin-syntax-dynamic-import": "~6.18.0",
    "babel-preset-env": "~1.6.0",
    "css-loader": "~0.28.4",
    "cssnano": "~3.10.0",
    "extract-text-webpack-plugin": "~3.0.0",
    "file-loader": "~1.1.4",
    "html-webpack-plugin": "~2.30.1",
    "name-all-modules-plugin": "~1.0.1",
    "node-sass": "~4.5.3",
    "object.omit": "~3.0.0",
    "offline-plugin": "~4.8.1",
    "postcss": "~6.0.2",
    "postcss-loader": "~2.0.5",
    "pug": "~2.0.0-rc.2",
    "pug-loader": "~2.3.0",
    "sass-loader": "~6.0.5",
    "style-ext-html-webpack-plugin": "~3.4.1",
    "style-loader": "~0.19.0",
    "url-loader": "~0.5.9",
    "webpack": "~3.6.0",
    "webpack-config-assign": "~1.0.0"
  },
  "devDependencies": {
    "@dschau/bump-version-ci": "^1.0.2",
    "@types/node": "~8.0.31",
    "del-cli": "~1.1.0",
    "husky": "~0.14.3",
    "lint-staged": "~4.2.3",
    "prettier": "~1.7.3",
    "typescript": "~2.5.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --single-quote --parser typescript",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
